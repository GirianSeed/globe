VER	= $(shell cat $(TOPDIR)VERSION)

NAME	= netglue_libeenet-$(VER)
DSTDIR	= $(TOPDIR)dist/$(NAME)

TOP = ../../../..
#TOP = /usr/local/sce/ee
EE_INCDIR	= $(TOP)/include

