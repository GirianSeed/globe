root = true

[*]
tab_width       = 8
indent_size     = tab
indent_style    = tab
end_of_line     = lf
max_line_length = off

[*.{c,h}]
tab_width       = 8
indent_size     = tab
indent_style    = tab

[*.{s,S,sx}]
tab_width       = 8
indent_size     = tab
indent_style    = tab

[*.{dsm,vsm,vcl}]
tab_width       = 8
indent_size     = tab
indent_style    = tab

[{*{M,m}akefile*,*.{mk,mak,make}}]
tab_width       = 8
indent_size     = tab
indent_style    = tab

[*.{bash,sh,zsh}]
indent_style    = space
end_of_line     = lf

[*.{bat,cmd,ps1}]
indent_style    = space
end_of_line     = crlf

[*.txt]
tab_width       = 8
indent_size     = tab
indent_style    = tab
end_of_line     = crlf
