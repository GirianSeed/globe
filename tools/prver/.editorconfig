root = true

[*]
tab_width       = 8
indent_size     = tab
indent_style    = tab
end_of_line     = lf

max_line_length = off
trim_trailing_whitespace = true
insert_final_newline = true

[*.{c,h}]
tab_width       = 8
indent_size     = 4
indent_style    = space

[*.{s,S,sx}]
tab_width       = 8
indent_size     = tab
indent_style    = tab

[{*{M,m}akefile*,*.{mk,mak}}]
tab_width       = 8
indent_size     = tab
indent_style    = tab
